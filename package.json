{
  "name": "larawizard",
  "displayName": "LaraWizard",
  "description": "LaraWizard is your Laravel productivity companion! Create files, manage routes, and speed up your developmentâ€”all with an easy-to-use panel inside VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "larawizard-sidebar",
          "title": "LaraWizard",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "larawizard-sidebar": [
        {
          "id": "larawizard-models",
          "name": "Modelos",
          "contextualTitle": "Modelos",
          "when": "true"
        },
        {
          "id": "larawizard-requests",
          "name": "Requests",
          "contextualTitle": "Requests",
          "when": "true"
        },
        {
          "id": "larawizard-controllers",
          "name": "Controladores",
          "contextualTitle": "Controladores",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "larawizard.createModel",
        "title": "Crear Modelo",
        "icon": "$(plus)"
      },
      {
        "command": "larawizard.createRequest",
        "title": "Crear Request",
        "icon": "$(plus)"
      },
      {
        "command": "larawizard.createController",
        "title": "Crear Controlador",
        "icon": "$(plus)"
      },
      {
        "command": "larawizard.createAll",
        "title": "Crear Todos",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "larawizard.createAll",
          "when": "view == larawizard-sidebar",
          "group": "navigation"
        },
        {
          "command": "larawizard.createModel",
          "when": "view == larawizard-models",
          "group": "navigation"
        },
        {
          "command": "larawizard.createRequest",
          "when": "view == larawizard-requests",
          "group": "navigation"
        },
        {
          "command": "larawizard.createController",
          "when": "view == larawizard-controllers",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "npx tsc && tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "larawizard": "file:"
  }
}
